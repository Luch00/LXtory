            <TabItem Header="Image Upload">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox Name="ImageUploadSelector" Grid.Row="0" ItemsSource="{Binding ImageUploadSites}" DisplayMemberPath="Key" SelectedValue="{Binding UploadValue}" SelectedValuePath="Value">
                        <!--<ComboBoxItem Content="Imgur"/>
                        <ComboBoxItem Content="Gyazo"/>
                        <ComboBoxItem Content="Puush"/>
                        <ComboBoxItem Content="S/FTP"/>-->
                    </ComboBox>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Template" Value="{StaticResource ImgurTemplate}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ImageUploadSelector, Path=SelectedIndex}" Value="1">
                                        <Setter Property="Template" Value="{StaticResource GyazoTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=ImageUploadSelector, Path=SelectedIndex}" Value="2">
                                        <Setter Property="Template" Value="{StaticResource PuushTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=ImageUploadSelector, Path=SelectedIndex}" Value="3">
                                        <Setter Property="Template" Value="{StaticResource SFTPTemplate}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </TabItem>
            <TabItem Header="File Upload">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox Name="FileUploadSelector" Grid.Row="0" ItemsSource="{Binding FileUploadSites}" DisplayMemberPath="Key" SelectedValue="{Binding FileuploadValue}" SelectedValuePath="Value">
                        <!--<ComboBoxItem Content="Puush"/>
                        <ComboBoxItem Content="S/FTP"/>-->
                    </ComboBox>
                    <ContentControl Grid.Row="1">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Template" Value="{StaticResource NoneTemplate}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=FileUploadSelector, Path=SelectedIndex}" Value="1">
                                        <Setter Property="Template" Value="{StaticResource PuushTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=FileUploadSelector, Path=SelectedIndex}" Value="2">
                                        <Setter Property="Template" Value="{StaticResource SFTPTemplate}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </TabItem>
        </TabControl>
        <DockPanel Height="420">
            <Button x:Name="settingsApply" Content="Ok" HorizontalAlignment="Left" Margin="310,398,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ConfirmCommand}"/>
            <Button x:Name="settingsCancel" Content="Cancel" HorizontalAlignment="Left" Margin="15,398,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Command="{Binding CancelCommand}"/>
        </DockPanel>
    </Grid>
</UserControl>
